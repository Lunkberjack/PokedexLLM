<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".DetallesPoke">

    <ImageView
        android:id="@+id/sprite"
        android:layout_width="229dp"
        android:layout_height="232dp"
        app:layout_constraintBottom_toTopOf="@+id/nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/content_detalles_sprite" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="@color/sombra_texto"
        android:paddingBottom="2dp"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="15"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="75sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:shadowColor="@color/sombra_texto"
        android:paddingBottom="2dp"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <TextView
        android:id="@+id/peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:shadowColor="@color/sombra_texto"
        android:paddingBottom="2dp"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/altura" />

    <Button
        android:id="@+id/shinyToggle"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_margin="25dp"
        android:background="@drawable/shine"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/patras"
        android:layout_width="82dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@drawable/flecha"
        android:backgroundTint="@color/white"
        android:rotationY="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/cajaTipos"
        android:layout_width="409dp"
        android:layout_height="146dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/altura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
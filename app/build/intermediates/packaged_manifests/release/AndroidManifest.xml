<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokedexllm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="33" />
    <!-- Importante, para que pueda usar el servicio http -->
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.example.pokedexllm.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.pokedexllm.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/pokeball"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pokeball"
        android:supportsRtl="true"
        android:theme="@style/Theme.PokedexLLM.Custom"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.example.pokedexllm.DetallesPoke"
            android:exported="false"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <!--
             El configChanges permite que no se llame al onCreate() cada vez que se gira el dispositivo.
             El portrait desactiva el modo landscape.
        -->
        <activity
            android:name="com.example.pokedexllm.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|uiMode"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.pokedexllm.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>